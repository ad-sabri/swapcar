{% extends 'base.html.twig' %}

{% block title %}Les Annonces
{% endblock %}

{% block body %}
	<h1>Les Annonces</h1>
	<div class="row mt-5">
		{% for ad in ads %}
			<div class="col-md-4">
				<div class="card">
					<img src="https://picsum.photos/200/200" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{ ad.title }}</h4>
						<p class="card-text">{{ ad.description }}</p>
						<p class="card-text">
							{% for i in 1..5 %}
								<i class="fas fa-star"></i>
							{% endfor %}
						</p>
						<p>{{ ad.price }}
							&euro;</p>
						<a href="/ad/{{ ad.slug }}" class="btn btn-primary">En savoir plus !</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
