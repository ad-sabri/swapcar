{% extends 'base.html.twig' %}

{% block title %}Se connecter !
{% endblock %}

{% block body %}
	<h1>Connexion</h1>

	<div class="row" style="display: flex; align-items: center; justify-content: center;">
		<div class="col-md-4">
			{% if error %}
				<p>{{error.message}}</p>
			{% endif %}

			{{ form_start(formView) }}
			{{ form_widget(formView) }}

			<a href="#">Pas encore de compte ? Inscrivez-vous !</a>

			<button type="submit" class="btn btn-danger" style="display: flex; align-items: center; justify-content: center;">Connexion</button>

			{{ form_end(formView) }}
		</div>
	</div>


{% endblock %}
